# Figma API Configuration
FIGMA_ACCESS_TOKEN=figd_YOUR_TOKEN_HERE

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Default Figma File (optional)
FIGMA_FILE_KEY=your_default_file_key

# AI Grounding Instructions (optional)
# Customize for your brand voice, design system, or accessibility requirements
AI_SYSTEM_PROMPT=You are analyzing UI content. Focus on consistency, clarity, and accessibility.

# Azure AI Foundry (optional - for advanced agent features)
AZURE_AI_FOUNDRY_ENDPOINT=https://your-foundry-endpoint.com/
AZURE_AI_FOUNDRY_API_KEY=your_foundry_key_here
AZURE_AI_FOUNDRY_PROJECT_ID=your_project_id

# Security Configuration (if adding web server features)
PORT=3000
NODE_ENV=development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ALLOWED_ORIGINS=http://localhost:3000
